{
  "name": "@myorg/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:hot": "ts-node-dev --respawn --transpile-only --clear --no-notify src/server.ts",
    "dev:debug": "node --inspect=9229 -r ts-node/register src/server.ts",
    "dev:nodemon": "nodemon --watch src --ext ts,js --exec \"ts-node -r tsconfig-paths/register src/server.ts\"",
    "start": "node dist/server.js",
    "build": "tsc -b",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:migrate": "drizzle-kit migrate",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts}\""
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/jsonwebtoken": "^9.0.10",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "drizzle-orm": "^0.30.0",
    "express": "^4.18.2",
    "hono": "^2.0.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^8.0.0",
    "postgres": "^3.4.7",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.46.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.0",
    "prisma": "^5.22.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.0"
  }
}