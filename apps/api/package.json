{
  "name": "@myorg/api",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:debug": "node --inspect=9229 -r ts-node/register src/server.ts",

    "start": "node dist/server.js",
    "build": "tsc -b",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.{ts}\""
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/jsonwebtoken": "^9.0.10",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "hono": "^2.0.0",
    "jsonwebtoken": "^9.0.3",
    "pino": "^8.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "eslint": "^8.46.0",
    "prettier": "^3.6.0",
    "prisma": "^5.22.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.0"
  }
}