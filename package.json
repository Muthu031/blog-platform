{
  "name": "my-monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "setup": "pnpm install --no-frozen-lockfile",
    "bootstrap": "pnpm install --no-frozen-lockfile",
    "refresh-deps": "pnpm -w update && pnpm install",
    "update-browserslist-db": "pnpm dlx browserslist@latest --update-db",
    "recreate-lockfile": "node scripts/recreate-lockfile.js",
    "dev:all": "pnpm -w -r --parallel -F @myorg/api -F @myorg/web run dev",
    "dev:web": "pnpm -w -F @myorg/web run dev",
    "dev:api": "pnpm -w -F @myorg/api run dev",
    "distribute-env": "ts-node scripts/distribute-env.ts",
    "distribute-env:dev": "pnpm run distribute-env -- --env=development --targets=all",
    "distribute-env:prod": "pnpm run distribute-env -- --env=production --targets=all",
    "distribute-env:dev:fail": "pnpm run distribute-env -- --env=development --targets=all --fail-missing=true",
    "distribute-env:prod:fail": "pnpm run distribute-env -- --env=production --targets=all --fail-missing=true",
    "start:all": "pnpm -w -r run start",
    "build:all": "pnpm -w -r run build",
    "dev:debug": "pnpm -w -r --parallel -F @myorg/api run dev:debug -F @myorg/web run dev",
    "debug": "pnpm run dev:debug",
    "open:chrome-debug": "node ./scripts/start-chrome-debug.js http://localhost:8080 9222",
    "open:chrome-debug-wait": "pnpm dlx wait-on http://localhost:8080 && pnpm run open:chrome-debug",
    "debug:full": "concurrently --kill-others-on-fail \"pnpm -C apps/api run dev:debug\" \"pnpm -C apps/web run dev\" \"pnpm run open:chrome-debug-wait\""
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@vitejs/plugin-react": "^5.1.2",
    "ts-node": "^10.9.1",
    "concurrently": "^8.2.0"
  }
}